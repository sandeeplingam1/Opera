# LLM Provider Configuration
USE_LOCAL_MODEL=true  # Set to false to use OpenAI instead

# OpenAI API Configuration (optional if using local model)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Local Model Configuration
LOCAL_MODEL_NAME=meta-llama/Llama-3.2-1B
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MODEL_CACHE_DIR=./models

# Database Configuration
DATABASE_URL=sqlite:///./opera.db
# For PostgreSQL: postgresql://user:password@localhost:5432/opera

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./chroma_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=your_secret_key_here_change_in_production
